	</head>
	<body>
    <div id="wrapper">
		<!-- Header -->
		<header id="header">
			<h1><a href="#">{{general.site_name}}</a></h1>
			<nav class="links">
				<ul>
					<li><a href="/">Home</a></li>
					<li><span class="has-dropdown">Catrgories
						<ul class="dropdown">
							{% for item in categories %}
							<a href="/categories/{{item.name}}">
